{
  "name": "@devon/desktop",
  "version": "0.0.1",
  "private": false,
  "main": "dist/index.js",
  "author": {
    "name": "VGM Developers",
    "email": "dev@vgm.me",
    "url": "https://github.com/vgmtv"
  },
  "repository": "https://github.com/vgmtv/vgm",
  "scripts": {
    "build": "run-s build:base build:web build:web:post build:electron",
    "build:base": "yarn clean && yarn compile",
    "build:skipweb": "run-s build:base build:web:post build:electron",
    "build:web": "pushd \"../web\" && yarn build && popd",
    "build:web:post": "shx cp -Rf ../web/dist ./dist/web",
    "build:electron": "electron-builder",
    "compile": "tsc -b",
    "clean": "shx rm -rf build && shx rm -rf dist",
    "format": "prettier --write '{.,src/**}/*.{js,jsx,ts,tsx}'",
    "lint": "tslint -p .",
    "predeploy": "yarn run build",
    "start": "NODE_ENV=development nodemon --watch dist/*.js --watch assets --exec \"electron .\"",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "build": {
    "appId": "tv.vgm.desktop",
    "productName": "VGM TV",
    "extends": null,
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "extraMetadata": {
      "name": "vgmtv"
    },
    "linux": {
      "icon": "icons/icon.png"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icons/icon.png"
    },
    "win": {
      "icon": "icons/icon.ico"
    },
    "files": [
      "assets",
      "dist"
    ],
    "protocols": [
      {
        "name": "VGMTV",
        "schemes": [
          "vgmtv"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "4.0.0",
    "electron-builder": "20.38.3",
    "nodemon": "1.18.9",
    "npm-run-all": "^4.1.5",
    "tslint": "5.11.0",
    "typescript": "3.9.6",
    "wait-on": "3.2.0"
  }
}
